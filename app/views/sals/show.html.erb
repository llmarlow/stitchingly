<div class="booyah-box col-xs-12">
  <div class="panel">
    <div class="panel-body">
      <h1 class="text-center">
        <%= @sal.name %> 
        <% if @sal.link? %>
        <%= link_to "Buy", "http://#{@sal.link}", class: "btn btn-success pull-right", target: :_blank %>
        <% end %>
      </h1>
      <div class="col-md-6 col-sm-12 col-xs-12">
        <% if @sal.picture? %>
            <%= image_tag(@sal.picture, class: "img-thumbnail img-responsive") %>
        <% else %>
            <%= image_tag("noimage.jpeg", class: "img-thumbnail img-responsive") %>
        <% end %>
      </div>
      <div class="col-md-6 col-sm-12 col-xs-12">
        <h3 class="text-center">By <%= link_to @sal.company, "http://#{@sal.company_link}"  %></h3>
        <hr>
        <% if @sal.start_date %>
          <h4 class="text-center"><%= @sal.start_date.strftime("%b %d, %Y") %>
        <% else %>
          <h4 class="text-center">Not Started
        <% end %>
        <% if @sal.end_date && @sal.start_date %>
          - <%= @sal.end_date.strftime("%b %d, %Y") %></h4>
        <% elsif @sal.start_date %>
          - Not Finished</h4>
        <% end %>
        </br>
        <%= @sal.notes.html_safe %>
      </div>
    </div>
  </div>
</div>