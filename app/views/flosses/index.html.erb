<div class="row">
<%= render 'sidebar' %>
<div class="booyah-box col-xs-7 col-xs-offset-1">
    <h1 class="text-center"><%= params[:brand] %> <%= params[:type] %> Threads</h1>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
       <h3 class="text-center">Sort By</h3>
        <table class="table table-bordered table-striped"> 
          <thead> 
            <tr> 
              <th class="text-center"><%= sort_link(@q, :colour, 'Colour', default_order: :asc) %></th>
              <th class="text-center"><%= sort_link(@q, :flossnumber, 'Number', default_order: :asc) %></th>
            </tr> 
          </thead> 
        </table>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Colour</th>
              <th>Number</th>
              <th class="text-center">Quantity</th>
            </tr>
          </thead>
          <tbody>
            <div id="floss">
              <%= render 'floss' %>
            </div>
          </tbody>
        </table>
        <div class="text-center">
          <%= will_paginate @flosses, renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>
</div>
</div>