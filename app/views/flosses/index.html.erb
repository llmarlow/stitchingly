<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">DMC Threads</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Colour</th>
            <th class="text-center">Quantity</th>
          </tr>
        </thead>
        <% @flosses.each do |floss| %>
        <tr>
          <td><strong><%= floss.colour %></strong></td>
          <% if Quantity.where(user: current_user, floss: floss).exists? %>
            <td class="text-center">
              <%= link_to '<i class="fa fa-minus"></i>'.html_safe, '#', :method => :post, class: "btn btn-danger btn-xs" %>
              <%= Quantity.where(user: current_user, floss: floss).first.quantity %>
              <%= link_to '<i class="fa fa-plus"></i>'.html_safe, '#', :method => :post, class: "btn btn-success btn-xs" %>
              </td>
            <% else %>
              <td class="text-center">
                <%= link_to '<i class="fa fa-plus"></i>'.html_safe, quantities_path(:user_id => current_user.id, :floss_id => floss.id), :method => :post, class: "btn btn-success btn-xs" %>
              </td>
            <% end %>
        </tr>   
        <% end %>         
      </table>
      <div class="text-center">
        <%= will_paginate @flosses, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
</div>