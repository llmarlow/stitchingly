<h1>All Threads</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Colour</th>
          <th class="text-center">Quantity</th>
        </tr>
      </thead>
      <% @flosses.each do |floss| %>
      <tr>
          <td><strong><%= floss.colour %></strong></td>
          <% if Quantity.where(user: current_user, floss: floss).exists? %>
            <td class="text-center"><a class='btn btn-info btn-xs' href="#"><span class="glyphicon glyphicon-edit"></span><%= Quantity.where(user: current_user, floss: floss).first.quantity %></a> <a href="#" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-remove"></span>+</a></td>
          <% else %>
            <td><%= link_to "Add", quantities_path(:user_id => current_user.id, :floss_id => floss.id), :method => :post %></td>
          <% end %>
      </tr>   
      <% end %>         
    </table>
    <div class="text-center">
      <%= will_paginate @flosses, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>