<div class="row">
<%= render 'sidebar' %>
<div class="booyah-box col-sm-7 col-sm-offset-1">
  <%=  mail_to "sarah@stitchingly.com", "Suggest New Threads", subject: "Suggest New Threads", class: "btn btn-success padding" %>
    <h2 class="text-center">
      <% if params[:brand] %>
        <%= params[:brand] %>
      <% else %> 
        DMC Stranded Cotton
      <% end %> 
      <%= params[:type] %> Threads
    </h2>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
       <h3 class="text-center">Sort By</h3>
        <table class="table table-bordered table-striped"> 
          <thead> 
            <tr> 
              <th class="text-center">
              <%= link_to "Colour", params.merge(sort_param: 'colour').permit! %></th>
              <th class="text-center"><%= link_to "Number", params.merge(sort_param: 'number').permit! %></th>
            </tr> 
          </thead> 
        </table>
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Colour</th>
              <th>Number</th>
              <th class="text-center">Quantity</th>
            </tr>
          </thead>
          <tbody>
            <div id="floss">
              <%= render 'floss' %>
            </div>
          </tbody>
        </table>
        
      </div>
    </div>
</div>
</div>