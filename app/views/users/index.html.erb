<h1>All Users</h1>
<table class="table table-striped">
  <thead>
    <tr>
    <th>Username</th>
    <th>Name</th>
    <th>Email</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td>
        <% if user.name %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
</tbody>
</table>