<div class="row">
  <div class="col-xs-2">
    <%= link_to '<i class="fa fa-chevron-up fa-2x"></i>'.html_safe, like_feature_path(feature), method: :put %>
    <p class="padding"><strong><%= feature.votes_for.size %></strong></p>
          <%= link_to '<i class="fa fa-chevron-down fa-2x"></i>'.html_safe, dislike_feature_path(feature), method: :put %>
  </div>
  <div class="col-xs-8">
    <div class="row">
      <h3 class="text-center"><strong><%= feature.title %></strong></h3>
    </div>
    <div class="row">
      <p><%= feature.description %></p>
    </div>
    <div class="row">
      <%= link_to "View", feature_path(feature), class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>
<hr>