<%= simple_form_for @project, url: user_projects_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :notes %>
    <%= f.input :progress %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success padding" %>
  </div>
<% end %>
