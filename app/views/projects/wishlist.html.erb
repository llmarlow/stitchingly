<h1>Wishlist 
  <%= link_to "Archive", archive_path, class: "btn btn-default padding pull-right" %>
  <%= link_to "All Projects", dashboardall_path, class: "btn btn-default padding pull-right" %>
  <%= link_to "Project Dashboard", dashboard_path, class: "btn btn-success padding pull-right" %>
</h1>
    <div class="row">
        <div class="col-lg-12"> 
          <div class="content-box project-wrapper">
          <% @projects.each do |project | %>
            <div class="project-item">
              <div class="status-desktop pull-left">
                <span class="active"><%= project.status %></span>
              </div>
              <div class="project-box white-bg pull-left">
                <div class="status-mobile pull-left">
                  <span class="active"><%= project.status %></span>
                </div>
                <div class="project-tools mobile-tools text-right pull-left">
                  <a href="#"><i class="fa fa-eye"></i></a>
                  <a href="#"><i class="fa fa-pencil"></i></a>
                  <a href="#"><i class="fa fa-close"></i></a>
                </div>
                <div class="pull-left">
                  <div class="resp-avatars">
                    <div class="name"><strong><%= project.name %></strong></div>
                    <% if project.picture? %>
                      <%= image_tag(project.picture, class: "img-rounded") %>
                    <% else %>
                        <%= image_tag("noimage.jpeg", class: "img-rounded") %>
                    <% end %>
                  </div>
                </div>

                <div class="project-name pull-left">
                  <div class="created"><strong>
                  <% if project.start_date %>
                  <%= project.start_date.strftime("%b %d, %Y") %> -
                  <% else %>
                    Not Started
                  <% end %>
                  <% if project.finish_date %>
                    <%= project.finish_date.strftime("%b %d, %Y") %> 
                  <% end %>
                    </strong></span></div>
                  <div class="created">Last Updated <%= project.updated_at.strftime("%b %d, %Y") %></span></div>
                </div>
                <div class="project-progress pull-left">
                  <span class="task-title"><span><%= project.progress %>% Complete</span></span>
                  <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-success" role="progressbar" aria-valuenow="<%= project.progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= project.progress %>%;">
                    </div>
                  </div>
                </div>
                <div class="project-tools desktop-tools text-right pull-left">
                  <%= link_to(user_project_path(project.user, project)) do %>
                    <i class="fa fa-eye"></i>
                  <% end %>
                  <%= link_to(edit_user_project_path(project.user, project)) do %>
                    <i class="fa fa-pencil"></i>
                  <% end %>
                  <%= link_to(user_project_path(project.user, project), method: :delete, data: { confirm: "Are you sure?" }) do %> 
                    <i class="fa fa-close"></i>
                  <% end %>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
          <% end %>
          </div>
        </div>
      </div>