<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>New Project</h1>
<%= simple_form_for @project, url: user_projects_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, placeholder: 'Name of your project' %>
    <%= f.input :private %>
    <%= f.input :picture %>
    <%= f.input :status, collection: ['Wishlist', 'Owned', 'Chart Only', ' Partially Kitted', 'Fully Kitted', 'WIP', 'Finished', 'UFO', 'FFO'], prompt: "Select a Status" %>
    <%= f.input :start_date, start_year: Date.today.year - 30, end_year: Date.today.year, order: [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } %>
    <%= f.input :finish_date, start_year: Date.today.year - 30, end_year: Date.today.year, order: [:day, :month, :year], :prompt => { :day => 'Select day', :month => 'Select month', :year => 'Select year' } %>
    <%= f.input :progress, placeholder: '% Complete' %>
    <%= f.input :pattern_name %>
    <%= f.input :pattern_designer %>
    <%= f.input :fabric_brand %>
    <%= f.input :fabric_colour %>
    <%= f.input :fabric_count %>
    <%= f.input :thread_brand %>
    <%= f.input :tag_list, placeholder: 'list tags separated by a , e.g cross stitch, haed, butterfly' %>
    <%= f.input :notes, placeholder: 'Any notes about your project or changes you have made.' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success padding" %>
    <%= link_to 'Back', :back, class: "btn btn-default padding pull-right" %>
  </div>
<% end %>
</div>
