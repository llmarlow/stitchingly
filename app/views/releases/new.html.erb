<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>New Release</h1>

<%= simple_form_for @release, url: sal_releases_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :picture %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back',  sal_path(@sal) %>
</div>