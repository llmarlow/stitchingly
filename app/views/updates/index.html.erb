<p id="notice"><%= notice %></p>

<h1>Updates</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Update date</th>
      <th>Hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= image_tag update.picture %></td>
        <td><%= update.update_date %></td>
        <td><%= update.hours %></td>
        <td><%= link_to 'Show', user_project_update_path(@project.user, @project, update) %></td>
        <td><%#= link_to 'Edit', edit_user_project_update_path(update.project, update) %></td>
        <td><%#= link_to 'Destroy', user_project_update_path(update.project, update), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

