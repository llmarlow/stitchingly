<h1>Editing Update</h1>

<%= simple_form_for @update, url: user_project_update_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :picture %>
    <%= f.input :update_date %>
    <%= f.input :hours %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-success" %>
  </div>
<% end %>

<%= link_to 'Back',  user_project_path(current_user, @update.project) %>
 