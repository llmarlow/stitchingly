<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>New Update</h1>

<%= simple_form_for @update, url: user_project_updates_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :picture %>
    <%= f.input :update_date %>
    <%= f.input :hours %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back',  user_project_updates_path %>
</div>